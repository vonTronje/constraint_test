<h1>Listing prisoners</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prisoners.each do |prisoner| %>
      <tr>
        <td><%= link_to 'Show', prisoner %></td>
        <td><%= link_to 'Edit', edit_prisoner_path(prisoner) %></td>
        <td><%= link_to 'Destroy', prisoner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

